// This file handles the Session model for user session management

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  ipAddress String?
  userAgent String?
  lastActive DateTime @default(now())
  createdAt DateTime @default(now())
  expiresAt DateTime

  // Relations
  user User @relation("UserSessions", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@index([lastActive])
  @@map("sessions")
}
